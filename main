def getCode(path):
    #path = '/Users/arjama/testDir/textfile1.txt' #Enter path here
    st = os.stat(path)
    oct_perm = oct(st.st_mode)
    mask = oct_perm[ 5: 8: 1]
    return (mask)

import os
import pathlib
import glob
#from mainFile import getCode

root_dir = '/Users/arjama'
maskToSearch = '700' # To be changed as per requirement
with open('filetest', 'r+') as file:

    for filename in glob.iglob(root_dir + '**/**', recursive=True):
        if os.path.isfile(filename):
            mask = getCode(filename)
            if (mask >= maskToSearch):
                file.write("%s %s\n" % (filename, mask))
                #file.write(filename)
                #file.write(mask)
